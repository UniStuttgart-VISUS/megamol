{
  "name": "megamol",
  "version-string": "1.3.0-dev",
  "dependencies": [
    {
      "name": "adios2",
      "features": [
        "zfp"
      ],
      "version>=": "2.8.3#1"
    },
    "bhtsne",
    "blend2d",
    "chemfiles",
    "cmakerc",
    "cppzmq",
    "curl",
    "cxxopts",
    "delaunator-cpp",
    "eigen3",
    "glfw3",
    "glm",
    {
      "name": "imgui",
      "features": [
        "docking-experimental"
      ]
    },
    "imgui-software-renderer",
    "imguizmoquat",
    "implot",
    "libigl",
    {
      "name": "libjpeg-turbo",
      "platform": "!windows"
    },
    "libpng",
    "lua",
    "mmpld-io",
    "nanoflann",
    {
      "name": "ncurses",
      "platform": "!windows"
    },
    "nlohmann-json",
    "obj-io",
    "qhull",
    "quickhull",
    "simultaneous-sort",
    "snappy",
    "spdlog",
    {
      "name": "tbb",
      "version>=": "2021.5.0"
    },
    "tinygltf",
    "tinyobjloader",
    "tinyply",
    "zeromq",
    "zfp",
    "zlib"
  ],
  "features": {
    "cgal": {
      "description": "Use CGAL",
      "dependencies": [
        "cgal"
      ]
    },
    "cuda": {
      "description": "Use CUDA"
    },
    "cuesdk": {
      "description": "Use Corsair CUE",
      "dependencies": [
        "cuesdk"
      ]
    },
    "mpi": {
      "description": "Use MPI",
      "dependencies": [
        {
          "name": "adios2",
          "features": [
            "mpi"
          ]
        },
        {
          "name": "icet",
          "features": [
            "mpi",
            "opengl"
          ]
        },
        "mpi"
      ]
    },
    "opengl": {
      "description": "Use OpenGL",
      "dependencies": [
        "glad",
        {
          "name": "glowl",
          "features": [
            "gl-extensions",
            "glm"
          ]
        },
        {
          "$comment": "Workaround for https://github.com/microsoft/vcpkg/issues/31298 to disable glslang default features, is otherwise only required as transitive dependency of megamol-shader-factory.",
          "name": "glslang",
          "default-features": false
        },
        {
          "name": "imgui",
          "features": [
            "opengl3-binding"
          ]
        },
        {
          "name": "imgui-tex-inspect",
          "features": [
            "opengl3-binding"
          ]
        },
        "megamol-shader-factory"
      ]
    },
    "opengl-debuggroups": {
      "description": "Automatically inject OpenGL debug groups into MegaMol Call callback invocations"
    },
    "ospray": {
      "description": "Use OSPRay",
      "dependencies": [
        {
          "name": "ospray",
          "features": [
            "avx",
            "avx2"
          ],
          "version>=": "2.10.0"
        }
      ]
    },
    "power": {
      "description": "Use power consumption measurement",
      "dependencies": [
        "power-overwhelming"
      ]
    },
    "profiling": {
      "description": "Use Profiling"
    },
    "stacktrace": {
      "description": "Use Boost.Stacktrace",
      "dependencies": [
        "boost-stacktrace",
        {
          "name": "libbacktrace",
          "platform": "!windows"
        }
      ]
    },
    "tracy": {
      "description": "Use Tracy",
      "dependencies": [
        {
          "name": "tracy",
          "features": [
            "cli-tools",
            "gui-tools"
          ]
        }
      ]
    },
    "vr-interop": {
      "description": "Use VR Interop",
      "dependencies": [
        "mwk-mint-interop"
      ]
    },
    "vtkm": {
      "description": "Use VTK-m",
      "dependencies": [
        "vtk-m"
      ]
    }
  }
}
