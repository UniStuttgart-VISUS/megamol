{
  "name": "megamol",
  "version-string": "1.3.0-dev",
  "dependencies": [
    {
      "name": "adios2",
      "features": [
        "zfp"
      ],
      "version>=": "2.8.3#1"
    },
    "bhtsne",
    "blend2d",
    "chemfiles",
    "cppzmq",
    "curl",
    "cxxopts",
    "delaunator-cpp",
    "eigen3",
    "expat",
    "glfw3",
    "glm",
    {
      "name": "imgui",
      "features": [
        "docking-experimental"
      ]
    },
    "imguizmoquat",
    "implot",
    "libigl",
    "libpng",
    "lua",
    "mmpld-io",
    "nanoflann",
    "nlohmann-json",
    "obj-io",
    "qhull",
    "quickhull",
    "simultaneous-sort",
    "snappy",
    "spdlog",
    {
      "name": "tbb",
      "version>=": "2021.5.0"
    },
    "tinygltf",
    "tinyobjloader",
    "tinyply",
    "zeromq",
    "zfp",
    "zlib"
  ],
  "features": {
    "use-cgal": {
      "description": "Use CGAL",
      "dependencies": [
        "cgal"
      ]
    },
    "use-cuda": {
      "description": "Use CUDA"
    },
    "use-cuesdk": {
      "description": "Use Corsair CUE",
      "dependencies": [
        "cuesdk"
      ]
    },
    "use-mpi": {
      "description": "Use MPI",
      "dependencies": [
        {
          "name": "adios2",
          "features": [
            "mpi"
          ]
        },
        {
          "name": "icet",
          "features": [
            "mpi",
            "opengl"
          ]
        },
        "mpi"
      ]
    },
    "use-opengl": {
      "description": "Use OpenGL",
      "dependencies": [
        {
          "name": "glowl",
          "features": [
            "glm",
            "gl-extensions"
          ]
        },
        {
          "name": "imgui",
          "features": [
            "opengl3-binding"
          ]
        },
        {
          "name": "imgui-tex-inspect",
          "features": [
            "opengl3-binding"
          ]
        },
        "megamol-shader-factory"
      ]
    },
    "use-ospray": {
      "description": "Use OSPRay",
      "dependencies": [
        {
          "name": "ospray",
          "version>=": "2.10.0",
          "features": [
            "avx",
            "avx2"
          ]
        }
      ]
    },
    "use-opengl-debuggroups": {
      "description": "Automatically inject OpenGL debug groups into MegaMol Call callback invocations"
    },
    "use-profiling": {
      "description": "Use Profiling"
    },
    "use-vr-interop": {
      "description": "Use VR Interop",
      "dependencies": [
        "mwk-mint-interop"
      ]
    },
    "use-vtkm": {
      "description": "Use VTK-m",
      "dependencies": [
        "vtk-m"
      ]
    }
  }
}
